<%= form_with(model: metadata_sample, local: true) do |form| %>
  <% if metadata_sample.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(metadata_sample.errors.count, "error") %> prohibited this metadata_sample from being saved:</h2>

      <ul>
        <% metadata_sample.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :metadata_source %>
    <%= form.select(:metadata_source, [['Ladybird', 'ladybird'], ['Voyager', 'ils', disabled: true], ['ArchiveSpace', 'aspace', disabled: true]]) %>
  </div>

  <div class="field">
    <%= form.label :number_of_samples %>
    <%= form.number_field :number_of_samples %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
